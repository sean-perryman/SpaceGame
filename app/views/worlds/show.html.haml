.container.well
	.col-md-6
		%h3= @world.name
		%table.table.table-striped
			- @planets.each do |planet|
				%tr
					%td= planet.name
					%td= link_to "Show Planet", planet_path(planet), :class => "btn btn-sm btn-default"
		%br
		= link_to "Back", worlds_path, :class => "btn btn-default"
		= link_to "New World", new_world_path, :class => "btn btn-default"